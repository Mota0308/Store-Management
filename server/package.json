{
  "name": "inventory-backend",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "dev:local": "cross-env NODE_ENV=development MONGODB_URI=mongodb://localhost:27017/Storage_Local ts-node-dev --respawn --transpile-only src/index.ts",
    "migrate": "node migrate_database.js",
    "create-users": "node create_test_users.js",
    "create-users:prod": "node create_test_users.js --production",
    "update-password": "node update_user_password.js",
    "update-password:prod": "node update_user_password.js --production",
    "mongodb:update": "node direct_update_mongodb.js",
    "mongodb:list": "node direct_update_mongodb.js --list"
  },
  "dependencies": {
    "axios": "^1.12.2",
    "bcrypt": "^5.1.1",
    "canvas": "^3.2.0",
    "cors": "^2.8.5",
    "cross-env": "^10.0.0",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "form-data": "^4.0.4",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "mongodb": "^6.20.0",
    "mongoose": "^8.6.1",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "pdf-parse": "^1.1.1",
    "pdfjs-dist": "^3.11.174",
    "xlsx": "^0.18.5"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/morgan": "^1.9.6",
    "@types/multer": "^1.4.12",
    "@types/node": "^20.11.30",
    "@types/xlsx": "^0.0.35",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.4.5"
  }
}
